{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~package.json": [
        "package.json"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts"
  ]
}
